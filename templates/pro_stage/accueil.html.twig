{% extends 'proStageTemplate.html.twig' %}

{% block titre %}{{parent()}}Accueil{% endblock %}



{% block titrePage %}
Voici la liste des stages disponibles
{% endblock %}

{% block contenuPage %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-sm table-bordered">
				<thead>
					<tr>
						<th>
							Titre
						</th>
						<th>
							Entreprise
						</th>
						<th>
							Formation(s)
						</th>
					</tr>
				</thead>
        {% for stageCourant in stages %}
				<tbody>
					<tr>
						<td>
						<a href='{{path('proStage_descriptifStage',{id:stageCourant.id})}}'> {{stageCourant.titre}}</a>

						</td>
						<td>
							{{stageCourant.entreprise.nom}}
						</td>
						<td>
							{% for formation in stageCourant.formations %}
								{{formation.code}}</br>
							{% endfor %}
						</td>
					</tr>
          {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}
