{% extends 'proStageTemplate.html.twig' %}

{% block titre %}{{parent()}}Accueil{% endblock %}



{% block titrePage %}
Voici la liste des stages proposés par l'entreprise : {{entreprise.nom}}
{% endblock %}

{% block contenuPage %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-sm table-bordered">
				<thead>
					<tr>
						<th>
							#
						</th>
						<th>
							Titre
						</th>
						<th>
							Entreprise
						</th>
						<th>
							Formation(s)
						</th>
					</tr>
				</thead>
        {% for stageCourant in entreprise.stages %}
				<tbody>
					<tr>
						<td>
							{{stageCourant.id}}
						</td>
						<td>
							<a href='{{path('proStage_descriptifStage',{id:stageCourant.id})}}'> {{stageCourant.titre}}</a>
						</td>
						<td>
							{{stageCourant.entreprise.nom}}
						</td>
						<td>
							{% for formation in stageCourant.formations %}
								{{formation.code}}</br>
							{% endfor %}
						</td>
					</tr>
          {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

</br></br>

Informations sur l'entreprise :
<ul>
  <li>Actvité : {{entreprise.acitivite}} </li>
  <li>Adresse : {{entreprise.adresse}} </li>
  <li>Site Internet : {{entreprise.site}}
</ul>

{% endblock %}
