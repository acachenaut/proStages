{% extends 'proStageTemplate.html.twig' %}

{% block titre %}{{parent()}}Entreprises{% endblock %}


{% block titrePage %}
Les entreprises proposant un stage :
{% endblock %}

{% block contenuPage %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-sm table-bordered">
				<thead>
					<tr>
						<th>
							Nom
						</th>
						<th>
							Actvit√©
						</th>
						<th>
							Adresse
						</th>
						{% if is_granted('ROLE_ADMIN') %}
						<th>
							Modifier
						</th>
						{% endif %}
					</tr>
				</thead>
        {% for entrepriseCourante in entreprises %}
				<tbody>
					<tr>
						<td>
            <a href='{{path('proStage_entreprise',{nomEntreprise:entrepriseCourante.nom})}}'> {{entrepriseCourante.nom}}</a>
						</td>
						<td>
							{{entrepriseCourante.acitivite}}
						</td>
						<td>
								{{entrepriseCourante.adresse}}
						</td>
						{% if is_granted('ROLE_ADMIN') %}
						<td>
								<a href="{{path('proStage_modificationEntreprise',{'id':entrepriseCourante.id})}}">Modifier</a>
						</td>
						{% endif %}
					</tr>
          {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}
